<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/logo_djoalan_splashscreen"
        android:layout_width="308dp"
        android:layout_height="374dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_first_splashscreen" />

    <TextView
        android:id="@+id/text_tagline"
        style="@style/subheaderStyle"
        android:textColor="@color/tosca"
        android:layout_marginTop="40dp"
        android:text="Bebas Antri Dimanapun dan Kapanpun!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_djoalan_splashscreen" />
</androidx.constraintlayout.widget.ConstraintLayout>