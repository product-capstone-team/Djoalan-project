<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scanner.BarcodeScannerActivity">

    <TextView
        android:id="@+id/label_barcode"
        style="@style/headerStyle"
        android:layout_marginTop="84dp"
        android:text="Barcode"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder_barcode"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_barcode" />

    <ImageView
        android:id="@+id/fill_takePicture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/fill_circle"
        app:layout_constraintBottom_toBottomOf="@+id/outline_takePicture"
        app:layout_constraintEnd_toEndOf="@+id/outline_takePicture"
        app:layout_constraintStart_toStartOf="@+id/outline_takePicture"
        app:layout_constraintTop_toTopOf="@+id/outline_takePicture" />

    <ImageView
        android:id="@+id/outline_takePicture"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/outline_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_djoalan_scanner_barcode" />

    <ImageView
        android:id="@+id/logo_djoalan_scanner_barcode"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFinder_barcode"
        app:srcCompat="@drawable/logo_djoalan" />


</androidx.constraintlayout.widget.ConstraintLayout>