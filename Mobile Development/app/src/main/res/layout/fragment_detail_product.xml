<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailproduct.DetailProductFragment">

    <ImageView
        android:id="@+id/img_detail_product"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        tools:srcCompat="@drawable/logo_djoalan"
        android:background="@drawable/bg_cardview_history"/>

    <TextView
        android:id="@+id/name_detail_product"
        style="@style/subheaderStyle"
        android:text="Name Product"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_detail_product" />

    <TextView
        android:id="@+id/price_detail_product"
        style="@style/subheaderStyle"
        android:layout_marginTop="16dp"
        android:text="Rp.20.000"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_detail_product" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_detail_product">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/brand_detail_product"
                style="@style/subheaderStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="Brand : "
                app:layout_constraintEnd_toStartOf="@+id/brandName_edit"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/category_detail"
                style="@style/subheaderStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="Category : "
                app:layout_constraintEnd_toStartOf="@+id/category_name_edit"
                app:layout_constraintHorizontal_bias="0.266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brand_detail_product" />

            <TextView
                android:id="@+id/expiredDate_detail_product"
                style="@style/subheaderStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="Expired Date :"
                app:layout_constraintEnd_toStartOf="@+id/expiredDate_edit"
                app:layout_constraintHorizontal_bias="0.413"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_detail" />

            <TextView
                android:id="@+id/quatity_detail_product"
                style="@style/subheaderStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Quantity :"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/quantity_edit"
                app:layout_constraintHorizontal_bias="0.196"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expiredDate_detail_product"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/brandName_edit"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="6dp"
                android:text="Brand Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/category_name_edit"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="6dp"
                android:text="Category Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brandName_edit" />

            <TextView
                android:id="@+id/expiredDate_edit"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="6dp"
                android:text="dd/mm/yyyy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_name_edit" />

            <TextView
                android:id="@+id/quantity_edit"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="6dp"
                android:text="QTY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expiredDate_edit" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>