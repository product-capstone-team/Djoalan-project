<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgView_detail_history"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/name_item_cv_history_detail"
            style="@style/subheaderStyle"
            android:layout_marginTop="4dp"
            android:text="name item"
            android:textColor="@color/black"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.052"
            card_view:layout_constraintStart_toEndOf="@+id/imgView_detail_history"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desc_item_cardview"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Brand"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.062"
            card_view:layout_constraintStart_toEndOf="@+id/imgView_detail_history"
            card_view:layout_constraintTop_toBottomOf="@+id/name_item_cv_history_detail" />

        <TextView
            android:id="@+id/category_text_history_detail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Category"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.062"
            card_view:layout_constraintStart_toEndOf="@+id/imgView_detail_history"
            card_view:layout_constraintTop_toBottomOf="@+id/desc_item_cardview" />

        <TextView
            android:id="@+id/expiredDate_text_history_detail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="dd/mm/yyyy"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.062"
            card_view:layout_constraintStart_toEndOf="@+id/imgView_detail_history"
            card_view:layout_constraintTop_toBottomOf="@+id/category_text_history_detail" />

        <TextView
            android:id="@+id/qty_history_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="quantity"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toEndOf="@+id/desc_item_cardview"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_price_history_detail"
            style="@style/subheaderStyle"
            android:layout_marginTop="24dp"
            android:text="Rp.50.000"
            android:textColor="@color/black"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.926"
            card_view:layout_constraintStart_toEndOf="@+id/expiredDate_text_history_detail"
            card_view:layout_constraintTop_toBottomOf="@+id/qty_history_detail_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>