<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/profile_page_heading"
            style="@style/headerStyle"
            android:layout_marginTop="36dp"
            android:text="Profile"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_grid_layout"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_topside_box"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_page_heading">

            <TextView
                android:id="@+id/label_profile_name"
                style="@style/subheaderStyle"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Name : "
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_profile_email"
                style="@style/subheaderStyle"
                android:layout_marginTop="20dp"
                android:text="Email :"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/label_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/label_profile_name" />

            <TextView
                android:id="@+id/input_profile_name"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:maxLines="2"
                android:text="Name lengkap"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label_profile_name" />

            <TextView
                android:id="@+id/input_profile_email"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:gravity="end"
                android:maxLines="2"
                android:text="aril@gmail.com"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/input_profile_name"
                app:layout_constraintTop_toTopOf="@+id/label_profile_email" />

            <TextView
                android:id="@+id/store_name"
                style="@style/subheaderStyle"
                android:layout_marginTop="20dp"
                android:text="Store Name :"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.026"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_profile_email" />

            <TextView
                android:id="@+id/company"
                style="@style/subheaderStyle"
                android:layout_marginTop="20dp"
                android:text="Company :"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.024"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_name" />

            <TextView
                android:id="@+id/store_location"
                style="@style/subheaderStyle"
                android:layout_marginTop="20dp"
                android:text="Store Location :"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.024"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/company" />

            <TextView
                android:id="@+id/store_name_text"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:text="Alfamart"
                android:gravity="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.966"
                app:layout_constraintStart_toEndOf="@+id/store_name"
                app:layout_constraintTop_toBottomOf="@+id/input_profile_email" />

            <TextView
                android:id="@+id/company_text"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:maxLines="2"
                android:text="AlfamartIndo"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/company"
                app:layout_constraintTop_toBottomOf="@+id/store_name_text" />

            <TextView
                android:id="@+id/store_location_text"
                style="@style/subheaderStyle"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:maxLines="2"
                android:text="Pontianak"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toEndOf="@+id/store_location"
                app:layout_constraintTop_toBottomOf="@+id/company_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_grid_layout"
            android:background="@drawable/bg_bottomside_box"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <TextView
                android:id="@+id/change_bussines_text_profile"
                style="@style/subheaderStyle"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Change to Bussiness Account?"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.483" />

            <Button
                android:id="@+id/button_profile_change_account"
                style="@style/subheaderStyle"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/text_color_opacity"
                android:text="Continue"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.468" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_profile_logout"
            style="@style/headerStyle"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/red"
            android:text="Log Out"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_cardview_history"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_profile_logout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/QRCode_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>