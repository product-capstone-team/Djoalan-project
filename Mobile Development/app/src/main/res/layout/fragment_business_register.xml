<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.business.BusinessRegisterFragment">

    <ImageView
        android:id="@+id/imageView_register_business"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/bg_djoalan_business"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_register_storename_business"
        style="@style/subheaderStyle"
        android:layout_marginTop="32dp"
        android:text="Store Name"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="@+id/imageView_register_business"
        app:layout_constraintTop_toBottomOf="@+id/imageView_register_business" />

    <EditText
        android:id="@+id/edit_register_storename_business"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_register_storename_business" />

    <TextView
        android:id="@+id/label_register_namecompany_business"
        style="@style/subheaderStyle"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:text="Company"
        app:layout_constraintStart_toStartOf="@+id/label_register_storename_business"
        app:layout_constraintTop_toBottomOf="@+id/edit_register_storename_business" />

    <EditText
        android:id="@+id/edit_register_company_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/label_register_namecompany_business"
        app:layout_constraintTop_toBottomOf="@+id/label_register_namecompany_business" />

