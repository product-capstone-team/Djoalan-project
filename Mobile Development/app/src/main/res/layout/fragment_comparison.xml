<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ComparisonFragment"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/margin_grid_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemDetail_name_label"
        style="@style/subheaderStyle"
        android:layout_marginTop="36dp"
        android:text="Name:"
        android:textColor="@color/tosca"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/itemDetail_brand_label"
        style="@style/subheaderStyle"
        android:layout_marginTop="8dp"
        android:text="Brand:"
        android:textColor="@color/tosca"
        app:layout_constraintStart_toStartOf="@+id/itemDetail_name_label"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_name_value" />

    <TextView
        android:id="@+id/itemDetail_name_value"
        style="@style/subheaderStyle"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:gravity="end"
        android:text="Chitato Roasted Beef 200 MG"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/itemDetail_name_label"
        app:layout_constraintTop_toTopOf="@+id/itemDetail_name_label" />

    <TextView
        android:id="@+id/itemDetail_brand_value"
        style="@style/subheaderStyle"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:gravity="end"
        android:text="Chitato"
        app:layout_constraintEnd_toEndOf="@+id/itemDetail_name_value"
        app:layout_constraintStart_toEndOf="@+id/itemDetail_brand_label"
        app:layout_constraintTop_toTopOf="@+id/itemDetail_brand_label" />

    <TextView
        android:id="@+id/input_profile_name"
        style="@style/subheaderStyle"
        android:layout_width="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="stores"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/label_profile_email"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/itemDetail_brand_label"
        app:layout_constraintTop_toBottomOf="@+id/itemDetail_brand_label" />

    <TextView
        android:id="@+id/label_profile_email"
        style="@style/subheaderStyle"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="price"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/itemDetail_brand_value"
        app:layout_constraintTop_toTopOf="@+id/input_profile_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:elevation="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_profile_name"
        app:layout_constraintVertical_bias="0.008"
        tools:listitem="@layout/row_stores_comparison_home" />


</androidx.constraintlayout.widget.ConstraintLayout>